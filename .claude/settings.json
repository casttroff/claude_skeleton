{
  "permissions": {
    "allow": [
      "*"
    ],
    "deny": [
      "Bash(rm -rf /*)",
      "Bash(sudo rm -rf /*)",
      "Bash(format:*)",
      "Bash(mkfs:*)",
      "Bash(DROP DATABASE:*)",
      "Bash(TRUNCATE TABLE:*)"
    ]
  },
  "enabledMcpjsonServers": ["context7", "playwright", "mercadopago-mcp-server"],
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo '\n‚úÖ Session complete!\nüìù Remember to run: /checkpoint\nüìä Check progress: ls -la checkpoints/\nüîç Review context: cat .claude/sessions/context_session_*.md'",
            "timeout": 5
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo '‚úÖ Subagent finished. Review documentation in .claude/doc/'",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
